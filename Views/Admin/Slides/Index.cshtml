@{
    ViewData["Title"] = "Menus";
}
@model List<CherryShop.Models.Slider.Slider>;


<div class="table-responsive" style="width: 100% !important;">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var slider in Model)
            {
                <tr>
                    <td>@slider.Id</td>
                    <td>@slider.Title</td>
                    <td><a href="/admin/slider-edit?Id=@slider.Id">Edit</a></td>
                    <td><a href="/admin/slider-delete?Id=@slider.Id">Delete</a></td>

                </tr>

            }
            <!-- Add more rows as needed -->
        </tbody>
    </table>
    <button class="btn btn-outline-primary btn-lg btn-block" onclick="window.location = '/admin/new-slider'">New
        slider</button>

</div>
