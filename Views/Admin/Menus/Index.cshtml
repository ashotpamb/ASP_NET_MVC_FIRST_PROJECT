@{
    ViewData["Title"] = "Menus";
}
@model List<CherryShop.Models.Menus.Menu>;


<div class="table-responsive" style="width: 100% !important;">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var menu in Model)
            {
                <tr>
                    <td>@menu.Id</td>
                    <td>@menu.Name</td>
                    <td>@menu.Url</td>
                    <td><a href="/admin/menu-edit?Id=@menu.Id">Edit</a></td>
                    <td><a href="/admin/menu-delete?Id=@menu.Id">Delete</a></td>

                </tr>

            }
            <!-- Add more rows as needed -->
        </tbody>
    </table>
    <button class="btn btn-outline-primary btn-lg btn-block" onclick="window.location = '/admin/new-menu'">New
        Menu</button>

</div>
